<?xml version="1.0" encoding="UTF-8"?>
<project name="module_zombiesurvival" default="compile.module.zombiesurvival">
  <dirname property="module.zombiesurvival.basedir" file="${ant.file.module_zombiesurvival}"/>
  
  <property name="module.jdk.home.zombiesurvival" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.zombiesurvival" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.zombiesurvival" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.zombiesurvival" value="-encoding UTF-8 -source 7 -target 1.7 ${compiler.args}"/>
  
  <property name="zombiesurvival.output.dir" value="${module.zombiesurvival.basedir}/target/classes"/>
  <property name="zombiesurvival.testoutput.dir" value="${module.zombiesurvival.basedir}/target/test-classes"/>
  
  <path id="zombiesurvival.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="zombiesurvival.module.production.classpath">
    <path refid="${module.jdk.classpath.zombiesurvival}"/>
    <path refid="library.commons-lang3-3.8.1-javadoc.classpath"/>
    <path refid="library.jsfml-test.classpath"/>
    <path refid="library.maven:_org.apache.commons:commons-lang3:3.7.classpath"/>
  </path>
  
  <path id="zombiesurvival.runtime.production.module.classpath">
    <pathelement location="${zombiesurvival.output.dir}"/>
    <path refid="library.commons-lang3-3.8.1-javadoc.classpath"/>
    <path refid="library.jsfml-test.classpath"/>
    <path refid="library.maven:_org.apache.commons:commons-lang3:3.7.classpath"/>
  </path>
  
  <path id="zombiesurvival.module.classpath">
    <path refid="${module.jdk.classpath.zombiesurvival}"/>
    <pathelement location="${zombiesurvival.output.dir}"/>
    <path refid="library.commons-lang3-3.8.1-javadoc.classpath"/>
    <path refid="library.jsfml-test.classpath"/>
    <path refid="library.maven:_org.apache.commons:commons-lang3:3.7.classpath"/>
  </path>
  
  <path id="zombiesurvival.runtime.module.classpath">
    <pathelement location="${zombiesurvival.testoutput.dir}"/>
    <pathelement location="${zombiesurvival.output.dir}"/>
    <path refid="library.commons-lang3-3.8.1-javadoc.classpath"/>
    <path refid="library.jsfml-test.classpath"/>
    <path refid="library.maven:_org.apache.commons:commons-lang3:3.7.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.zombiesurvival">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.zombiesurvival">
    <patternset refid="excluded.from.module.zombiesurvival"/>
  </patternset>
  
  <path id="zombiesurvival.module.sourcepath">
    <dirset dir="${module.zombiesurvival.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  <path id="zombiesurvival.module.test.sourcepath">
    <dirset dir="${module.zombiesurvival.basedir}">
      <include name="src/test/java"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.zombiesurvival" depends="compile.module.zombiesurvival.production,compile.module.zombiesurvival.tests" description="Compile module ZombieSurvival"/>
  
  <target name="compile.module.zombiesurvival.production" depends="register.custom.compilers" description="Compile module ZombieSurvival; production classes">
    <mkdir dir="${zombiesurvival.output.dir}"/>
    <javac2 destdir="${zombiesurvival.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.zombiesurvival}/javac">
      <compilerarg line="${compiler.args.zombiesurvival}"/>
      <bootclasspath refid="zombiesurvival.module.bootclasspath"/>
      <classpath refid="zombiesurvival.module.production.classpath"/>
      <src refid="zombiesurvival.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.zombiesurvival"/>
    </javac2>
    
    <copy todir="${zombiesurvival.output.dir}">
      <fileset dir="${module.zombiesurvival.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.zombiesurvival.tests" depends="register.custom.compilers,compile.module.zombiesurvival.production" description="compile module ZombieSurvival; test classes" unless="skip.tests">
    <mkdir dir="${zombiesurvival.testoutput.dir}"/>
    <javac2 destdir="${zombiesurvival.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.zombiesurvival}/javac">
      <compilerarg line="${compiler.args.zombiesurvival}"/>
      <bootclasspath refid="zombiesurvival.module.bootclasspath"/>
      <classpath refid="zombiesurvival.module.classpath"/>
      <src refid="zombiesurvival.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.zombiesurvival"/>
    </javac2>
    
    <copy todir="${zombiesurvival.testoutput.dir}">
      <fileset dir="${module.zombiesurvival.basedir}/src/test/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.zombiesurvival" description="cleanup module">
    <delete dir="${zombiesurvival.output.dir}"/>
    <delete dir="${zombiesurvival.testoutput.dir}"/>
  </target>
</project>